<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.os.operando.fullscratchradiogroup.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Original Full Scratch RadioGroup"
        android:textSize="20dp" />

    <com.os.operando.fullscratchradiogroup.widget.FullScratchRadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:checkedButton="@+id/full_scratch_radio_button_1"
        app:orientation="horizontal">

        <com.os.operando.fullscratchradiogroup.widget.FullScratchRadioButton
            android:id="@+id/full_scratch_radio_button_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_button_background"
            android:gravity="center"
            android:text="button 1"
            android:textSize="30sp" />

        <com.os.operando.fullscratchradiogroup.widget.FullScratchRadioButton
            android:id="@+id/full_scratch_radio_button_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_button_background"
            android:gravity="center"
            android:text="button 2"
            android:textSize="30sp" />

        <com.os.operando.fullscratchradiogroup.widget.FullScratchRadioButton
            android:id="@+id/full_scratch_radio_button_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_button_background"
            android:gravity="center"
            android:text="button 3"
            android:textSize="30sp" />
    </com.os.operando.fullscratchradiogroup.widget.FullScratchRadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Android RadioGroup"
        android:textSize="20dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_button_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_button_background"
            android:button="@null"
            android:gravity="center"
            android:text="button 1"
            android:textSize="30sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_button_background"
            android:button="@null"
            android:gravity="center"
            android:text="button 2"
            android:textSize="30sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_button_background"
            android:button="@null"
            android:gravity="center"
            android:text="button 3"
            android:textSize="30sp" />
    </RadioGroup>
</LinearLayout>
